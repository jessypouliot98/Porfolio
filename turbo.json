{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "check:lint": {},
    "check:style": {},
    "check:types": {},
    "code-quality": {
      "dependsOn": ["check:lint", "check:style", "check:types"]
    },
    "fix:lint": {},
    "fix:style": {},
    "fix": {
      "dependsOn": ["fix:lint", "fix:style"]
    }
  }
}